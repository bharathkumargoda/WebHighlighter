{
  "manifest_version": 3,
  "name": "Text Highlighter",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Highlight text"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
